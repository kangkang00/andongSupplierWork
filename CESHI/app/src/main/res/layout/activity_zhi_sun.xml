<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZhiSunActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="49dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#0093DD"
            android:layout_height="45dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/returnbacks_iv"
                android:layout_centerVertical="true"
                android:src="@drawable/returnback"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:id="@+id/taitle_tv"
                android:layout_centerInParent="true"
                android:text="定位"/>
        </RelativeLayout> \
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:src="#d6d6d6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="16dp"
                android:text="VIN:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/svn"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:text="SHYD88888888888888"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#d6d6d6"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#d6d6d6"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/all_sv"
            android:visibility="gone"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/locations_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:text="位置"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:id="@+id/locations_tv"
                        android:textSize="16dp"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/locationsimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/locationsimageView" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>

                <RelativeLayout
                    android:id="@+id/location_ll"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="位置小类"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/location_tv"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/locationimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/locationimageView" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/sub_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:text="质损部位"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/sub_tv"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/subimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/subimageView" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/reason_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:text="质损原因"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/reason_tv"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/reasonimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/reasonimageView" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/type_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:text="类型"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/type_tv"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/typeimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/typeimageView" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/level_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:text="程度"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/level_tv"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/levelimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/levelimageView" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/section_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:text="质损发现"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/section_tv"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/sectionimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/sectionimageView" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/process_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:text="质损处理方式"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/process_tv"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/processimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/processimageView" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/mile_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/mile_tv"
                        android:text="公里数"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mile_tv"
                        android:inputType="number"
                        android:textColor="#333333"
                        android:hint="输入公里数"
                        android:id="@+id/mile_ev"
                        android:textSize="16dp"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/esponsible_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/esponsible_tv"
                        android:text="责任人"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/esponsible_tv"
                        android:textColor="#333333"
                        android:hint="输入责任人"
                        android:id="@+id/esponsible_ev"
                        android:textSize="16dp"
                        android:background="@null"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/secondary_supplier_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/secondary_supplier_tv"
                        android:text="次级供应商"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/secondary_supplier_tv"
                        android:textColor="#333333"
                        android:hint="输入次级供应商"
                        android:id="@+id/secondary_supplier_ev"
                        android:textSize="16dp"
                        android:background="@null"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:id="@+id/analy_ll"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:id="@+id/xsdsda"
                        android:textSize="16dp"
                        android:text="质损分析"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/analy_tv"
                        android:text=""
                        android:gravity="right"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/xsdsda"
                        android:layout_toLeftOf="@+id/analyimageView"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/analyimageView" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/particulars_ll"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="具体原因描述："
                        android:textSize="16dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:minLines="5"
                        android:gravity="top"
                        android:padding="5dp"
                        android:textColor="#333333"
                        android:id="@+id/particulars_ev"
                        android:background="@drawable/order_edt_note_bg" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#d6d6d6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传图片"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="85dp" >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/pi_ll"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:id="@+id/addpic_al"
                                android:layout_marginLeft="10dp">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/addpic_img"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/add"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </LinearLayout>


        </ScrollView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#d6d6d6"/>



    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/save_button"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ok_button_shap"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text="保存" />

</RelativeLayout>